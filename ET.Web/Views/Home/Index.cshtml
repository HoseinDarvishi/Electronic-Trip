@model List<ET.Constracts.CarConstracts.CarVM>
@{
   ViewBag.Title = "صفحه اصلی";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
   <div class="container my-2 p-2 mx-auto rounded rounded-2 bg-white shadow-sm" style="border-radius:15px !important;">
      <p class="alert p-1 alert-warning text-center">@TempData["Message"]</p>
   </div>
}

<div class="cars-container p-2 bg-white shadow">
   @if (Model.Count > 0)
   {
      <h4 class="text-center mr-4 my-2">خودروها</h4>
      <hr class="mt-2" />
      <div class="row cards">

         @foreach (var car in Model)
         {
            <div class="col-12 col-lg-4 col-md-6 p-3">
               <div class="car-card bg-white shadow text-right overflow-hidden">
                  <h5 class="text-center text-white card-name py-3 mb-4">@car.CarName</h5>
                  <div class="px-4 overflow-hidden position-relative">
                     <p>مدل : @car.Model</p>
                     <p class="my-1">رنگ : @car.Color</p>
                     <p>سرعت : @car.Speed</p>
                     <p class="my-1 font-weight-bold">راننده : @car.DriverName</p>
                     <img class="car-logo" src="~/Content/car-logo.png">
                  </div>
                  <div class="text-center mt-4">
                     <a href="@Url.Action("SetRequest","Home",new {carId = car.CarId})" class="card-btn py-2 text-light w-100 d-flex justify-content-center align-items-center">درخواست</a>
                  </div>
               </div>
            </div>
         }
      </div>
      <div class="d-flex justify-content-center">
         <p class="text-center mt-3 mb-2 py-2 rounded rounded-pill px-5 bg-warning shadow">تعداد خودروهای فعال : (@Model.Count)</p>
      </div>
   }
   else
   {
      <p class="alert alert-warning text-center p-3">خودروی فعالی وجود ندارد</p>
   }
</div>